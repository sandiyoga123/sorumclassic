generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
  // binaryTargets = ["native", "rhel-openssl-3.0.x"] // komentari jika menggunakan database local
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // komentari jika menggunakan database local
}

enum ROLE {
  admin
  user
}

enum STATUS {
  Pembayaran
  Dikemas
  Dikirim
  Review
  Riwayat
  Ditolak
}

model User {
  id       String @id @default(uuid())
  name     String
  username String @unique
  phone    String @unique
  password String
  role     ROLE   @default(user)

  reviews Review[]
  orders  Order[]

  @@map("users")
}

model Review {
  id         String   @id @default(uuid())
  user_id    String
  order_id   String   @unique
  review     String
  rating     Int      @db.SmallInt
  created_at DateTime @default(now())

  // Relation
  order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model Order {
  id            String   @id @default(uuid())
  user_id       String
  order_date    DateTime @default(now())
  total_price   BigInt
  payment_proof String?
  receipt       String?
  status        STATUS   @default(Pembayaran)

  // Relation
  user         User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  review       Review?
  item         Item?
  order_detail OrderDetails?

  @@map("orders")
}

model OrderDetails {
  id              String  @id @default(uuid())
  order_id        String  @unique
  name            String
  phone           String
  address         String
  postal_code     String
  expedition      String
  expedition_fee  Int
  additional_info String?

  order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)

  @@map("order_details")
}

model Item {
  id       String @id @default(uuid())
  order_id String @unique
  unit_id  String
  quantity Int    @default(1) @db.SmallInt

  order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)
  unit  Unit  @relation(fields: [unit_id], references: [id], onDelete: Cascade)

  @@map("items")
}

model Unit {
  id          String  @id @default(uuid())
  brand       String
  name        String
  look        String
  image       String
  description String
  year        String
  document    String
  type        String
  price       BigInt
  stock       Int     @db.SmallInt
  deleted     Boolean @default(false)

  order_items Item[]

  @@map("units")
}
